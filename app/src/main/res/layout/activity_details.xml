<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">


    <ImageView
        android:id="@+id/product_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/produit1" />


    <TextView
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nom du produit"
        android:textSize="20sp"
        android:paddingTop="16dp" />

    <TextView
        android:id="@+id/product_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prix"
        android:textSize="18sp"
        android:paddingTop="8dp" />


    <TextView
        android:id="@+id/product_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description du produit"
        android:textSize="16sp"
        android:paddingTop="8dp" />


    <TextView
        android:id="@+id/product_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CatÃ©gorie"
        android:textSize="16sp"
        android:paddingTop="8dp" />

    <RadioGroup
        android:id="@+id/size_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp">

        <RadioButton
            android:id="@+id/size_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Petit" />

        <RadioButton
            android:id="@+id/size_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moyenne" />

        <RadioButton
            android:id="@+id/size_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grand" />

    </RadioGroup>

    <CheckBox
        android:id="@+id/add_to_favorites_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter aux favoris"
        android:paddingTop="16dp" />

    <Switch
        android:id="@+id/add_to_cart_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter au panier"
        android:paddingTop="16dp" />

</LinearLayout>
